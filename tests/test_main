import pytest
from your_module import add   # replace 'your_module' with your file name (without .py)

def test_add_integers():
    assert add(2, 3) == 5

def test_add_negative_numbers():
    assert add(-2, -3) == -5

def test_add_mixed_numbers():
    assert add(-2, 3) == 1

def test_add_floats():
    assert add(2.5, 3.5) == 6.0

def test_add_strings():
    assert add("Hello ", "World") == "Hello World"
